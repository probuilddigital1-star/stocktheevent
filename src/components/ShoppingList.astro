---
import type { ShoppingItem, Item } from '../lib/types';
import { getAffiliateLink } from '../lib/affiliates';

interface Props {
  items: ShoppingItem[];
  mainItem: Item;
}

const { items: shoppingItems, mainItem } = Astro.props;

// Separate main item from accessories
const mainItemEntry = shoppingItems[0];
const accessories = shoppingItems.slice(1);
---

<section class="py-16 bg-white">
  <div class="max-w-3xl mx-auto px-4">
    <div class="text-center mb-10">
      <h2 class="font-display text-2xl md:text-3xl font-bold text-slate-900 mb-3">
        Your Shopping List
      </h2>
      <p class="text-slate-500">
        Everything you need, plus essentials you might forget
      </p>
    </div>

    <div class="bg-white rounded-2xl shadow-xl border border-slate-100 overflow-hidden">
      <!-- Main Item -->
      <div class="p-8 bg-gradient-to-br from-amber-50 via-orange-50 to-amber-50 border-b border-amber-100 relative overflow-hidden">
        <div class="absolute top-0 right-0 w-32 h-32 bg-orange-200/20 rounded-full -translate-y-1/2 translate-x-1/2"></div>
        <div class="flex items-center justify-between relative z-10">
          <div class="flex items-center gap-5">
            <span class="text-6xl drop-shadow-sm">{mainItem.emoji}</span>
            <div>
              <div class="font-bold text-xl text-slate-900">{mainItemEntry.name}</div>
              <div class="text-sm text-amber-700 font-medium">The main event</div>
            </div>
          </div>
          <div class="text-right">
            <div class="text-4xl font-black text-transparent bg-clip-text bg-gradient-to-r from-amber-600 to-orange-600">{mainItemEntry.quantity}</div>
            <div class="text-sm text-slate-500 font-medium">{mainItemEntry.unit}</div>
          </div>
        </div>
      </div>

      <!-- Accessories -->
      {accessories.length > 0 && (
        <div class="p-6">
          <h3 class="text-sm font-semibold text-slate-500 uppercase tracking-wide mb-4 flex items-center gap-2">
            <span class="w-6 h-px bg-slate-200"></span>
            Don't forget these
            <span class="flex-1 h-px bg-slate-200"></span>
          </h3>
          <ul class="divide-y divide-slate-100">
            {accessories.map((item) => {
              const affiliateUrl = getAffiliateLink(item.name);
              return (
                <li class="py-4 flex items-center justify-between hover:bg-slate-50 -mx-3 px-3 rounded-lg transition-colors">
                  <div class="flex items-center gap-3">
                    <div class="w-2.5 h-2.5 bg-gradient-to-br from-amber-400 to-orange-400 rounded-full shadow-sm"></div>
                    <span class="text-slate-700 font-medium">{item.name}</span>
                    {item.notes && (
                      <span class="text-xs text-slate-400 bg-slate-100 px-2 py-0.5 rounded-full">({item.notes})</span>
                    )}
                  </div>
                  <div class="flex items-center gap-3">
                    <div class="text-slate-900 font-bold">
                      {item.quantity} <span class="text-slate-400 font-normal">{item.unit}</span>
                    </div>
                    {affiliateUrl && (
                      <a
                        href={affiliateUrl}
                        target="_blank"
                        rel="noopener sponsored"
                        class="text-xs bg-amber-100 hover:bg-amber-200 text-amber-700 px-2 py-1 rounded-lg transition-colors font-medium"
                      >
                        Buy
                      </a>
                    )}
                  </div>
                </li>
              );
            })}
          </ul>
        </div>
      )}

      <!-- Print/Copy Button -->
      <div class="p-5 bg-gradient-to-b from-slate-50 to-slate-100 border-t border-slate-200">
        <button
          id="copy-list"
          class="w-full py-3 px-4 bg-emerald-600 text-white rounded-xl font-bold hover:bg-emerald-700 hover:scale-[1.02] transition-all shadow-lg shadow-emerald-200 flex items-center justify-center gap-2"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
          </svg>
          Copy Shopping List
        </button>
      </div>
    </div>
  </div>
</section>

<script define:vars={{ shoppingItems }}>
  document.getElementById('copy-list')?.addEventListener('click', () => {
    const text = shoppingItems
      .map(item => `${item.quantity} ${item.unit} - ${item.name}${item.notes ? ` (${item.notes})` : ''}`)
      .join('\n');

    navigator.clipboard.writeText(text).then(() => {
      const btn = document.getElementById('copy-list');
      if (btn) {
        const originalText = btn.innerHTML;
        btn.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg> Copied!';
        setTimeout(() => { btn.innerHTML = originalText; }, 2000);
      }
    });
  });
</script>
