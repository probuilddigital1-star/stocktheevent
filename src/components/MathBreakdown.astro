---
import type { MathStep } from '../lib/types';

interface Props {
  steps: MathStep[];
}

const { steps } = Astro.props;
---

<section class="py-16 bg-white">
  <div class="max-w-3xl mx-auto px-4">
    <div class="text-center mb-10">
      <h2 class="font-display text-2xl md:text-3xl font-bold text-slate-900 mb-3">
        How We Calculated This
      </h2>
      <p class="text-slate-500">
        Our bartender-tested formula, step by step
      </p>
    </div>

    <div class="space-y-5">
      {steps.map((step) => (
        <div class="bg-gradient-to-br from-slate-50 to-white rounded-2xl p-6 border border-slate-100 shadow-sm hover:shadow-md transition-shadow">
          <div class="flex items-start gap-5">
            <!-- Step Number -->
            <div class="flex-shrink-0 w-10 h-10 bg-gradient-to-br from-amber-500 to-orange-500 text-white rounded-xl flex items-center justify-center font-bold text-sm shadow-lg shadow-amber-200/50">
              {step.step}
            </div>

            <div class="flex-1 min-w-0">
              <!-- Step Label -->
              <h3 class="font-semibold text-slate-900 mb-3">{step.label}</h3>

              <!-- Formula -->
              <div class="bg-slate-900 rounded-xl p-4 mb-3 font-mono text-sm text-emerald-400 overflow-x-auto shadow-inner">
                {step.formula}
              </div>

              <!-- Result -->
              <div class="flex items-center gap-3 mb-3">
                <span class="text-sm text-slate-400">=</span>
                <span class="font-bold text-lg text-transparent bg-clip-text bg-gradient-to-r from-amber-600 to-orange-600">{step.result}</span>
              </div>

              <!-- Explanation -->
              <p class="text-sm text-slate-500 leading-relaxed">{step.explanation}</p>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Trust Signal -->
    <div class="mt-10 p-6 bg-gradient-to-br from-emerald-50 to-emerald-100/50 rounded-2xl border border-emerald-200 text-center">
      <div class="flex items-center justify-center gap-2 mb-2">
        <span class="text-2xl">*</span>
        <span class="font-semibold text-emerald-800">Why trust this formula?</span>
      </div>
      <p class="text-sm text-emerald-700 max-w-xl mx-auto leading-relaxed">
        Based on industry standards and refined by bartenders with 30+ years of experience.
        We factor in consumption decay (people drink less as events progress) and real-world drinking percentages.
      </p>
    </div>
  </div>
</section>
