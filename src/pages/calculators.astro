---
import BaseLayout from '../layouts/BaseLayout.astro';
import { items } from '../data/items';
import { events } from '../data/events';

// Event emoji mapping (keys match event.id)
const eventEmojis: Record<string, string> = {
  wedding: 'ğŸ’’',
  graduation: 'ğŸ“',
  corporate: 'ğŸ’¼',
  birthday: 'ğŸ‚',
  'super-bowl': 'ğŸˆ',
  'holiday-party': 'ğŸ„',
  'wedding-shower': 'ğŸ’',
};

// Calculate counts
const drinksPerEvent = items.length * 12; // 4 drinks Ã— 12 guest counts = 48
const eventsPerDrink = events.length * 12; // 7 events Ã— 12 guest counts = 84
---

<BaseLayout
  title="Drink Calculators | StockTheEvent"
  description="Drink calculators for any event. Calculate exactly how much wine, beer, champagne, or spirits you need for weddings, parties, and more."
>
  <!-- Hero Section -->
  <section class="py-16 md:py-24 bg-gradient-to-b from-amber-50 via-orange-50/30 to-white">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h1 class="font-display text-4xl md:text-5xl lg:text-6xl font-bold text-slate-900 mb-6 animate-fade-in-up">
        Drink Calculators
      </h1>
      <p class="text-xl text-slate-600 mb-8 max-w-2xl mx-auto animate-fade-in-up">
        <span class="font-semibold text-amber-600">336 calculators</span> to help you stock the perfect bar for any event
      </p>

      <!-- CTA to Homepage Calculator -->
      <div class="bg-white rounded-3xl shadow-xl border border-slate-100 p-8 md:p-10 max-w-xl mx-auto animate-fade-in-up animate-delay-100">
        <div class="text-6xl mb-4">ğŸ¾</div>
        <h2 class="font-display text-2xl font-bold text-slate-900 mb-3">
          Need a Quick Calculation?
        </h2>
        <p class="text-slate-600 mb-6">
          Use our interactive calculator for instant results
        </p>
        <a
          href="/"
          class="inline-block bg-gradient-to-r from-amber-500 to-orange-500 text-white px-8 py-4 rounded-xl font-bold hover:shadow-lg hover:scale-105 transition-all"
        >
          Try the Calculator
        </a>
      </div>
    </div>
  </section>

  <!-- Browse by Event -->
  <section class="py-16 bg-white">
    <div class="max-w-5xl mx-auto px-4">
      <div class="text-center mb-10">
        <h2 class="font-display text-2xl md:text-3xl font-bold text-slate-900 mb-3">
          Browse by Event
        </h2>
        <p class="text-slate-500">Find calculators for your specific occasion</p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-5">
        {events.map((event) => (
          <a
            href={`/calculators/${event.id}`}
            class="group bg-gradient-to-br from-white to-slate-50 p-6 rounded-2xl border border-slate-100 shadow-sm hover:shadow-xl hover:border-emerald-300 hover:scale-[1.02] transition-all"
          >
            <div class="flex items-center gap-4">
              <div class="text-5xl group-hover:scale-110 transition-transform">
                {eventEmojis[event.id] || 'ğŸ‰'}
              </div>
              <div class="flex-1">
                <div class="font-semibold text-lg text-slate-900 group-hover:text-emerald-600">
                  {event.name}
                </div>
                <div class="text-sm text-slate-500">
                  {drinksPerEvent} calculators
                </div>
              </div>
              <div class="w-10 h-10 bg-slate-100 rounded-full flex items-center justify-center group-hover:bg-emerald-100 transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-slate-400 group-hover:text-emerald-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </div>
            </div>
            <p class="mt-4 text-sm text-slate-500 line-clamp-2">
              {event.proTips[0]}
            </p>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Browse by Drink -->
  <section class="py-16 bg-gradient-to-b from-slate-50 to-white">
    <div class="max-w-5xl mx-auto px-4">
      <div class="text-center mb-10">
        <h2 class="font-display text-2xl md:text-3xl font-bold text-slate-900 mb-3">
          Browse by Drink Type
        </h2>
        <p class="text-slate-500">Calculate quantities for your beverage of choice</p>
      </div>

      <div class="grid md:grid-cols-2 gap-5">
        {items.map((item) => (
          <a
            href={`/calculators/${item.id}`}
            class="group bg-white p-8 rounded-2xl border border-slate-100 shadow-sm hover:shadow-xl hover:border-amber-300 hover:scale-[1.02] transition-all"
          >
            <div class="flex items-center gap-5">
              <div class="text-7xl group-hover:scale-110 transition-transform">
                {item.emoji}
              </div>
              <div class="flex-1">
                <div class="font-semibold text-xl text-slate-900 group-hover:text-amber-600">
                  {item.name} Calculators
                </div>
                <div class="text-slate-500 mt-1">
                  {eventsPerDrink} calculators across all events
                </div>
                <div class="text-sm text-slate-400 mt-2">
                  {item.servingsPerUnit} servings per {item.unitSingular}
                </div>
              </div>
              <div class="w-12 h-12 bg-amber-50 rounded-full flex items-center justify-center group-hover:bg-amber-100 transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-amber-400 group-hover:text-amber-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Bottom CTA -->
  <section class="py-16 bg-gradient-to-br from-emerald-600 to-emerald-700 relative overflow-hidden">
    <div class="absolute top-0 right-0 w-64 h-64 bg-white/10 rounded-full -translate-y-1/2 translate-x-1/2"></div>
    <div class="absolute bottom-0 left-0 w-48 h-48 bg-white/10 rounded-full translate-y-1/2 -translate-x-1/2"></div>

    <div class="max-w-3xl mx-auto px-4 text-center relative z-10">
      <h2 class="font-display text-3xl font-bold text-white mb-4">
        Not sure where to start?
      </h2>
      <p class="text-emerald-100 mb-8 text-lg">
        Our interactive calculator lets you pick any drink, event, and guest count
      </p>
      <a
        href="/"
        class="inline-block bg-white text-emerald-700 px-8 py-4 rounded-xl font-bold hover:bg-emerald-50 hover:scale-105 transition-all shadow-xl"
      >
        Use the Interactive Calculator
      </a>
    </div>
  </section>
</BaseLayout>
